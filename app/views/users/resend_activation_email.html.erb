<% form_for @user, :url => send_activation_email_users_path do |f| %>
<p>Type your email address to resend your account activation email.</p>
<p><%= f.label :email %>: <%= f.text_field :email%></p>
<p><%= f.submit 'Submit' -%></p>
<% end %>
  
<% content_for :scripts do %>
<%= static_asset_javascript 'javascripts/views/users/resend_activation_email', 'cache/views/users/resend_activation_email' %>
<% end %>

<% content_for :styles do %>
<%= static_asset_stylesheet 'stylesheets/views/users/resend_activation_email', 'cache/views/users/resend_activation_email' %>
<% end %>

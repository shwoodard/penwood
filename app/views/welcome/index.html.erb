<div class="homeCopy">
  <%= cms_content_for('home_copy') %>
</div>
<%= link_to 'Learn More About Penwood &#187;', about_us_path, :class => 'rounded-button xlarge homeLearnMoreButton'  -%>
<div class="homePictureFrame"><div class="homePictureFrameLiner"><%= image_tag "couple.jpg"-%></div></div>
<div class="homeHorizontal">
  <ol id="penwoodServices">
    <li><%= cms_content_for('home_couples') %><%= link_to '', couples_services_path, :class => 'homeLearnMoreSm' -%></li>
    <li><%= cms_content_for('home_orgs') %><%= link_to '', organizations_services_path, :class => 'homeLearnMoreSm' -%></li>
    <li class="last"><%= cms_content_for('home_families') %><%= link_to '', families_services_path, :class => 'homeLearnMoreSm' -%></li>
  </ol>
</div>
<% if logged_in? && flash[:signin] && current_user.show_welcome_dialog? %>
<%= hidden_field_tag "welcome_dialog_link", welcome_dialog_path %>
<%= hidden_field_tag "dont_show_welcome_dialog_path", dont_show_welcome_dialog_path, :rel => form_authenticity_token %>
<% end %>

<% content_for :scripts do %>
<%= static_asset_javascript 'javascripts/views/welcome/index', 'cache/views/welcome/index' %>
<% end %>

<% content_for :styles do %>
<%= static_asset_stylesheet 'stylesheets/views/welcome/index', 'cache/views/welcome/index' %>
<% end %>
